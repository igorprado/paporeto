doctype html
html
  head
    title paporeto.com
    = stylesheet_link_tag    "admin", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "admin", "data-turbolinks-track" => true
    = csrf_meta_tags

  body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          = link_to 'Paporeto', admin_articles_path, class: 'brand'

          - if user_signed_in?
            ul.nav
              li class="#{'active' if params[:controller] =~ /articles/}"
                = link_to 'Artigos', admin_articles_path
              li class="#{'active' if params[:controller] =~ /categories/}"
                = link_to 'Categorias', admin_categories_path
              li class="#{'active' if params[:controller] =~ /users/}"
                = link_to 'Usu√°rios', admin_users_path

            ul.nav.pull-right
              li
                = link_to current_user.email, '#'
              li
                = link_to 'Sair', destroy_user_session_path, method: :delete

    .container

      - if notice
        .alert
          button.close data-dismiss="alert" type="button" &times;
          = notice

      - if alert
        .alert.alert-error
          button.close data-dismiss="alert" type="button" &times;
          = alert

      = yield